<div class="container">
  <div class="card">
    <!-- Card header -->
    <div class="card-header">
      <h3 class="mb-0">主催者プロフィール</h3>
    </div>
    <!-- Card body -->
        <!-- Form -->
        <div class="card-body">
          <div class="mb-3">
            名前
            <%= @event.user.name %>
            <% if current_user.following?(@event.user) %>
              <%= link_to "フォローを外す", user_relationships_path(@event.user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@event.user.id), method: :post %>
            <% end %>
          </div>
          <div class="mb-3">
            趣味
            <%= @event.user.hobby %>
          </div>
          <div class="mb-3">
            自己紹介
            <%= @event.user.profile %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
