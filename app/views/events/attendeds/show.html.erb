<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">参加者プロフィール</h3>
  </div>
  <!-- Card body -->
      <!-- Form -->
      <div class="mb-3">
        名前
        <%= @attendee.name %>
        <% if current_user.following?(@attendee) %>
          <%= link_to "フォローを外す", user_relationships_path(@attendee.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@attendee.id), method: :post %>
        <% end %>
      </div>
      <div class="mb-3">
        趣味
        <%= @attendee.hobby %>
      </div>
      <div class="mb-3">
        自己紹介  
        <%= @attendee.profile %>
      </div>
    </div>
  </div>
</div>
